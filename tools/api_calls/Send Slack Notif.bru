meta {
  name: Send Slack Notif
  type: http
  seq: 1
}

post {
  url: http://{{notif_url}}/notify
  body: formUrlEncoded
  auth: inherit
}

body:form-urlencoded {
  message: this is the notif message
  app: slack
  from: Thread in channel: Sender Name
  priority: high
}

settings {
  encodeUrl: true
  timeout: 0
}
