meta {
  name: Send Slack Notif
  type: http
  seq: 2
}

post {
  url: http://{{notif_url}}/notify
  body: formUrlEncoded
  auth: inherit
}

body:form-urlencoded {
  message: this is the notif message that is slightly long so that we can see the 2 line and truncation in action
  app: slack
  from: Thread in channel: Sender Name
  priority: high
}

settings {
  encodeUrl: true
  timeout: 0
}
